{
  "manifest_version": 3,
  "web_accessible_resources": [
       {
      "resources": ["fonts/css/all.min.css", "fonts/*.woff2", "icons/gido.png"],
         "matches": ["<all_urls>"]
       }
  ],
  "name": "AI Navigator",
  "version": "2.0",
  "description": "Navigate any website with AI assistance and voice control",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'wasm-unsafe-eval' https://cdnjs.cloudflare.com; object-src 'self'"
  }
}